.header
  .header-container
    = link_to root_path do
      = image_tag "logo.png", alt: "Facepages logo", class: "logo", 
                              title: "Go to Facepages Home"

    .login-container
      = form_for( resource, as: resource_name, html: {id: 'login-form'}, 
                            url: session_path(resource_name) ) do |f|
        %table
          %tbody
            %tr
              %td
              %td= f.label :email
              %td= f.label :password
              %td
            %tr
              %td
                = link_to user_omniauth_authorize_path(:facebook) do
                  = image_tag "fb_login.png", alt: "Login with Facebook", 
                                              class: "login-img"
              %td= f.email_field :email, autofocus: true
              %td= f.password_field :password, autocomplete: "off"
              %td= f.submit "Log In"
            %tr
              %td
              %td
                = f.check_box :remember_me
                = f.label :keep_me_logged_in, for: 'user_remember_me'
              %td= link_to "Forgot your password?", new_password_path(resource_name)
              %td
